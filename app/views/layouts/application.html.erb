<!DOCTYPE html>
<html>
<h4><%= link_to "Home", "/" %></h4>
  <head>
    <title>Viewing Party Lite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <% flash.each do |type, msg| %>
      <div>
      <p><%= msg %></p>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
