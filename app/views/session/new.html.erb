<div id="page-title">
  <center>
    <h3>User Login</h3>
  </center>
</div>

<div id="login">
  <center>
    <%= form_with url: login_path, method: :post, local: true  do |form| %>
        <p><%= form.label :email, 'Email:' %>
        <%= form.text_field :email %></p>
        <p><%= form.label :password, 'Password:' %>
        <%= form.password_field :password %></p>
        <p><%= form.submit 'Submit' %></p>
    <% end %>
  </center>
</div>

<div id = guest_user>
  <center> 
    <%= button_to 'Guest Login', login_path, method: :post, params: {email: 'guest_test@mail.com', password: 'test123'} %>
    <br>
  </center>
</div>

<div id = new_user>
  <center> 
    <%= button_to 'Create New Account', register_path, method: :get  %>
    <br>
  </center>
</div>