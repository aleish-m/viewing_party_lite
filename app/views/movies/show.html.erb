<div id="movie-<%= @movie.id %>-details">
  <center><h2><%= @movie.title %></h3>
    <div id="action_options">
      <p>
        <%= button_to "Discover Page", discover_path, method: :get %>
      </p>
      <p>
        <%= button_to "Create Viewing Party for #{@movie.title}", new_movie_viewing_party_path(@movie.id), method: :get %>
      </p>
      <br>
    </div>
  </center>
  <h5> Vote Average: <%= @movie.rating %> </h5>
  <h5> Run Time: <%= @movie.runtime_in_hours %> </h5>
  <h5> Genre(s): <%= @movie.genre_list %> </h5>
  <%= image_tag(@movie.image) %>
</div>

<div id="movie-<%= @movie.id %>-description">
  <h3>Summary:</h3>
    <p><%= @movie.summary %></p>
  <h3>Cast:</h3>
    <ul>  
    <% @cast.each do |cast_member| %>
      <li>
        <%= cast_member.name %> as <%= cast_member.character %>
      </li>
    <% end %>
    </ul>  
</div>


<div id="movie-<%= @movie.id %>-reviews">
  <h4><%= @reviews.count %> Reviews</h4>
    <ul>
    <% if !@reviews.empty? %>
      <% @reviews.each_with_index do |review, index| %>
        <li>
          <div id="review-<%= index %>">
            <p>Author: <%= review.author %></p>
            <p><%= review.content %></p>
          </div>
        </li>
        <hr>
      <% end %>
    <% end %>
    </ul>
</div>