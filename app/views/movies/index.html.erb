<center><h3><%= @page_title %></h3>

<%= button_to "Discover Movies", user_discover_path(@user.id), method: :get %></center><br>

<% @movies.each do |movie| %>
  <h3>Title: <%= link_to "#{movie.title}", user_movie_path(@user.id, movie.id) %></h3>
  <h4>Average Rating: <%= movie.rating %></h4><hr>
<% end %>